@model tcc_UI.Models.ClienteModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary" role="alert">
    Meus Dados
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Nome)
    </div>
    <div class="col-sm-2">
        @Html.DisplayFor(model => model.Nome)
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Sobrenome)
    </div>
    <div class="col-sm-2">
        @Html.DisplayFor(model => model.Sobrenome)
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Cpf)
    </div>
    <div class="col-sm-2">
        @Model.ObterCPFFormatado()
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.DtNascimento)
    </div>
    <div class="col-sm-2">
        @Model.ObterDataNascimento()
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Sexo)
    </div>
    <div class="col-sm-2">
        @Model.ObterDescricaoSexo()
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Telefone)
    </div>
    <div class="col-sm-2">
        @Html.DisplayFor(model => model.Telefone)
    </div>
</div>
<br />
<div class="alert alert-primary" role="alert">
    Meus Endereços
</div>
@foreach (var end in Model.Enderecos)
{
    <div class="form-group row">
        <div class="col-sm-12 col-form-label">
            @end.ObterEndereco()
        </div>
    </div>
}