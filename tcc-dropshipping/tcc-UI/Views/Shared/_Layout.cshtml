<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

    <style type="text/css">
        .container {
            margin-top: 70px;
        }

        .jumbotron {
            padding: 0px;
        }
    </style>
</head>
@{
    var totalDeItensCarrinho = 0;
    if (Session["ShoppingCarrinho"] != null)
    {
        totalDeItensCarrinho = ((tcc_UI.Models.CarrinhoModels)Session["ShoppingCarrinho"]).Itens.Count;
    }
}
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">LOGO</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Html.Action("Index", "Home")">Home <span class="sr-only">(atual)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Smartphones</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Notebooks</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink(string.Format("Meu Carrinho - {0} produto(s)", totalDeItensCarrinho), "Index", "Carrinho")
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Minha conta</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            <a class="dropdown-item" href="#">Minha conta</a>
                            <a class="dropdown-item" href="#">Meus pedidos</a>
                            <a class="dropdown-item" href="#">Sair</a>
                        </div>
                    </li>
                </ul>

                <input class="form-control mr-sm-2" type="text" placeholder="Pesquisa" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
            </form>
        </div>
    </nav>

    <main role="main">
        <div class="container">
            @RenderBody()
            <hr>
        </div>
    </main>

    <footer class="container">
        <p>&copy; Loja Virtual @DateTime.Now.Year </p>
    </footer>

    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>